<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
	android:baselineAligned = "false"
    android:orientation="vertical" >

	    <Button
	        android:id="@+id/ohkay"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/home"
	        android:textSize = "12sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/new_room"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/find_room_now"
	        android:textSize = "10sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/find_room_later"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/search_options"
	        android:textSize = "10sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/get_room_schedule"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/get_room_schedule"
	        android:textSize = "10sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    	    	
</LinearLayout>

