<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id = "@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/gdcemptyroom"
    tools:context="com.example.app.ActivityRoomRec" 
    android:orientation="vertical"
    >
        
    <LinearLayout
        android:id = "@+id/bottom_button_bar"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
	    android:baselineAligned = "false"
        android:layout_alignParentBottom = "true" >
    
	    <Button
	        android:id="@+id/ohkay"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/home"
	        android:textSize = "12sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/new_room"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/find_room_now"
	        android:textSize = "10sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/find_room_later"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/search_options"
	        android:textSize = "10sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/get_room_schedule"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/get_room_schedule"
	        android:textSize = "10sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    	    	   	    	    	    	    
    </LinearLayout>
    
    <TextView
        android:id = "@+id/room_num"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginTop = "10dp"
        android:layout_marginLeft = "10dp"
        android:layout_marginRight = "10dp"
        android:ems = "10"
        android:gravity = "center"
        android:text = "@string/hello_world"
        android:textSize = "40sp"
        android:textColor = "@color/white"
        android:background = "@color/background_transparency" />
    
	<ScrollView
		android:layout_width = "match_parent"
		android:layout_height = "wrap_content"
        android:layout_below = "@+id/room_num"
        android:layout_above = "@+id/bottom_button_bar"
        android:layout_marginLeft = "10dp"
        android:layout_marginRight = "10dp"
        android:layout_marginBottom = "15dp"
        android:background = "@color/background_transparency" >
		
	    <TextView
	        android:id = "@+id/info_textview"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingLeft = "15dp"
	        android:paddingRight = "15dp"
	        android:paddingTop = "15dp"
	        android:textSize="13sp"
	        android:text = "@string/load_warning_msg"
	        android:textColor = "@color/white" />
	
	</ScrollView>

</RelativeLayout>

