<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backgroundinitial"
    tools:context="com.example.app.ActivityMain" 
    android:orientation="vertical"
    >
        
    <LinearLayout
        android:id = "@+id/bottom_button_bar"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true" >
    
	    <Button
	        android:id="@+id/find_room_now"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/find_random_room_now"
	        android:textSize = "12sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/find_room_for_later"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/find_room_later"
	        android:textSize = "12sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    
	    <View
	        android:layout_height = "fill_parent"
	        android:layout_width = "2px"
	        android:background = "@color/white" />
	    
	    <Button
	        android:id="@+id/get_room_schedule"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/get_room_schedule"
	        android:textSize = "12sp"
	        android:textColor = "@color/white"
        	android:background = "@color/background_transparency" />
	    	    	    	    
    </LinearLayout>

    <TextView
 		android:id="@+id/title_heading"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:editable="false"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name_caps"
        android:textSize="48sp"
	    android:textColor = "@color/white" />

</RelativeLayout>


