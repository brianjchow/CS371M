<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/atrium"
    tools:context="com.example.uis.ActivityFindRoomLater" 
    >

    <Button
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/set_start_date" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateButton"
        android:layout_marginTop="20dp"
        android:text="@string/set_start_time" />
	
	<Button
	    android:id = "@+id/min_duration"
	    android:layout_width = "wrap_content"
	    android:layout_height = "wrap_content"
        android:layout_below="@+id/timeButton"
        android:layout_marginTop="20dp"
	    android:text = "@string/set_minimum_duration" />
            	
	<Button
	    android:id = "@+id/min_capacity"
	    android:layout_width = "wrap_content"
	    android:layout_height = "wrap_content"
        android:layout_below="@+id/min_duration"
        android:layout_marginTop="20dp"
	    android:text = "@string/set_minimum_capacity" />
            
	<CheckBox
        android:id="@+id/has_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/min_capacity"
        android:layout_marginTop="20dp"
        android:text="@string/power_plugs_question"
        android:textSize="15sp"
        android:checked="false" />

    <Button
        android:id="@+id/get_Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/has_power"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="#1975FF"
        android:text="@string/get_room_enthusiastic"
        android:textSize="36sp" />
    
    <TextView
        android:id = "@+id/this_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/get_Room"
        android:layout_marginTop="20dp"
        android:text = "@string/current_query"
        android:textSize="12sp"
        />

</RelativeLayout>

