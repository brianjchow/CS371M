<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/atrium"
    tools:context="com.example.app.ActivityFindRoomLater"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:id = "@+id/bottom_button_bar"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true" >

	    <Button
	        android:id="@+id/get_Room"
	        android:layout_width="0dp"
	        android:layout_height="50dp"
	        android:layout_weight = "1"
	        android:text="@string/get_room_enthusiastic"
	        android:textSize = "24sp"
	        android:textColor = "@color/white" />

    </LinearLayout>
    
    <LinearLayout
        android:id = "@+id/top_button_bar"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
	    android:baselineAligned = "false" >

	    <Button
	        android:id="@+id/dateButton"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight = "1"
	        android:text="@string/set_start_date"
	        android:textSize = "14sp" />
	
	    <Button
	        android:id="@+id/timeButton"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight = "1"
	        android:text="@string/set_start_time"
	        android:textSize = "14sp" />
		
		<Button
		    android:id = "@+id/min_duration"
		    android:layout_width = "0dp"
		    android:layout_height = "wrap_content"
	        android:layout_weight = "1"
		    android:text = "@string/set_minimum_duration"
	        android:textSize = "14sp" />

		<Button
		    android:id = "@+id/min_capacity"
		    android:layout_width = "0dp"
		    android:layout_height = "wrap_content"
	        android:layout_weight = "1"
		    android:text = "@string/set_minimum_capacity"
		    android:textSize = "14sp" />
                        	        
    </LinearLayout>

	<CheckBox
        android:id="@+id/has_power"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_button_bar"
        android:layout_marginTop="8dp"
        android:text="@string/power_plugs_question"
        android:textSize="14sp"
        android:checked="false" />

    <TextView
        android:id = "@+id/this_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/has_power"
        android:layout_marginTop="10dp"
        android:text = "@string/current_query"
        android:textSize="12sp"
        android:textColor = "@color/white" />
	
</RelativeLayout>

