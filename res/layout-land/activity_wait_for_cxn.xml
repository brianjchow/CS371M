<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.app.ActivityWaitForCxn"
    android:orientation = "horizontal"
    >
        
    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:layout_alignParentBottom = "true" >
    
	    <Button
	        android:id="@+id/try_again"
	        android:layout_width="0dp"
	        android:layout_height="35dp"
	        android:layout_weight = "1"
	        android:text="@string/try_again"
	        android:textSize = "12sp" />

	    <Button
	        android:id="@+id/skip_update_button"
	        android:layout_width="0dp"
	        android:layout_height="35dp"
	        android:layout_weight = "1"
	        android:text="@string/skip_update"
	        android:textSize = "12sp" />
	    	    
	    <Button
	        android:id="@+id/quit_button"
	        android:layout_width="0dp"
	        android:layout_height="35dp"
	        android:layout_weight = "1"
	        android:text="@string/quit"
	        android:textSize = "12sp" />
	    	    
    </LinearLayout>
    
    <TextView
        android:id = "@+id/no_cxn_smartass_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_cxn_smartass_msg"
        android:layout_centerHorizontal = "true"
        android:textSize = "20sp" />
    
	<ImageView
	    android:id="@+id/dinosaur"
	    android:src = "@drawable/no_cxn_dinosaur_transparent_150p"
	    android:contentDescription = "@string/no_cxn_dinosaur_desc"
        android:layout_below = "@+id/no_cxn_smartass_msg"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true" />

    <TextView
        android:id = "@+id/no_cxn_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@+id/dinosaur"
        android:text="@string/no_cxn_msg"
        android:layout_centerHorizontal = "true"
        android:textSize = "18sp" />

</RelativeLayout>
